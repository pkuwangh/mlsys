{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": false
    },
    "black-formatter.args": [
        "--line-length=120"
    ],
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E402,F841,F401,E302,E305,W503,W504,E124"
    ],
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: LLVM, IndentWidth: 4, ColumnLimit: 120}",
    "C_Cpp.clang_format_style": "{BasedOnStyle: LLVM, IndentWidth: 4, ColumnLimit: 120}",
    "files.associations": {
        "*.cu": "cuda",
        "*.cuh": "cuda",
        "ios": "cpp",
        "*.ipp": "cpp",
        "__nullptr": "cpp",
        "any": "cpp",
        "exception": "cpp",
        "initializer_list": "cpp",
        "new": "cpp",
        "optional": "cpp",
        "stdexcept": "cpp",
        "typeinfo": "cpp",
        "variant": "cpp",
        "format": "cpp",
        "condition_variable": "cpp",
        "thread": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "csignal": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
