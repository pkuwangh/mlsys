[core]
    editor = vim
    pager = less -+$LESS -R
[push]
    default = simple
[color]
    diff = auto
    status = auto
    interactive = true
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
    upstream = bold red
[alias]
    b = branch -vv
    l = log -10 --oneline --decorate
    ll = log -20 --oneline --decorate
    lll = log -40 --oneline --decorate
[pager]
    log = false
    diff = true
    branch = false
    grep = false
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
